<h1>Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.type_name %></td>
        <%if can? :read, @type%>
        <td><%= link_to 'Mostrar', type %></td>
        <%end%>
        <td><%= link_to 'Editar', edit_type_path(type) %></td>
        <td><%= link_to 'Destruir', type, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

